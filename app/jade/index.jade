doctype html
html
    head
        link(href='css/skeleton.css', rel='stylesheet', type='text/css')
        link(href='css/app.css', rel='stylesheet', type='text/css')
    body
        .header.row
            #new-activity-btn.button Start new activity
            #break-btn.button Make a break
        .content.row
            .timer.twenty.columns
                input(class='task-name', placeholder='Enter task name')
                - onPause = true;
                #circle

                    if onPause
                        #main-timer 12:34
                        #pause-timer.active 03:18
                        #play-btn
                            img(src='images/play.gif')
                    else
                        #main-timer.active 12:34
                        #pause-timer.disabled 00:00
                        #play-btn
                            img(src='images/pause.png')

            //.info.four.columns
            //    textarea(class='task-description', placeholder='Enter task description')

        .progress.row
            .activity(style='width: 50px')
            .break(style='width: 10px')
            .activity(style='width: 50px')
            .break(style='width: 10px')